{
  "name": "tools",
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of useful tools for developers and lifestyle enhancement.",
  "main": "index.js",
  "keywords": [
    "tools",
    "development-tools",
    "lifestyle-tools",
    "sql",
    "typeorm",
    "parameter-replacer",
    "sleep-cycle-calculator",
    "debugging",
    "utilities",
    "typescript",
    "vite"
  ],
  "author": "Lam Ngoc Khuong <hi@khuong.dev>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "dev": "vite",
    "build": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.mjs,.cjs",
    "lint:fix": "eslint . --ext .js,.ts,.mjs,.cjs --fix",
    "lint:check": "eslint . --ext .js,.ts,.mjs,.cjs --max-warnings 5",
    "audit": "pnpm audit --audit-level moderate",
    "ci": "pnpm run lint:check && pnpm run type-check && pnpm run test && pnpm run build && echo 'CI passed successfully!'"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10"
  },
  "packageManager": "pnpm@10.15.1"
}
